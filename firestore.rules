// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner() {
      return isSignedIn() && request.auth.uid == resource.data.ownerUid;
    }
    function creatingAsSelf() {
      return isSignedIn() && request.resource.data.ownerUid == request.auth.uid;
    }
    // דוק שחשוף בקישור ציבורי אם יש עליו publicId לא-ריק
    function hasPublicLink() {
      return resource.data.publicId is string && resource.data.publicId.size() > 0;
    }

    // טפסים ראשיים
    match /forms/{formId} {
      allow create: if creatingAsSelf();
      // קריאה: בעלים או כל דוק שיש עליו publicId (קישור ציבורי)
      allow read: if isOwner() || hasPublicLink();
      allow update, delete: if isOwner();
    }

    // מראה תחת המשתמש
    match /users/{uid}/forms/{formId} {
      allow create: if isSignedIn()
                    && uid == request.auth.uid
                    && request.resource.data.ownerUid == request.auth.uid;
      allow read, update, delete: if isSignedIn() && uid == request.auth.uid;
    }

    // ברירת מחדל: חסום הכל
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
